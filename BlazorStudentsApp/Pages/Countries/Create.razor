@page "/Countries/Create"
<PageTitle>Countries-Create</PageTitle>
@inject CountriesDataServices countriesDataServices
@inject NavigationManager navigate
<h3>Add New Country</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    New Country Form
                </div>
            </div>
            <div class="card-body">
                <EditForm Model="@NewCountry">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Country Name</label>
                                <input type="text" id="txtClassesName" class="form-control" @bind-value="@NewCountry.Name" required="required" />
                            </div>
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="button" @onclick="@AddNewCountryAsync" class="btn btn-success" value="Submite" />
                                <a href="/Countries">Back to List</a>
                            </div>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
        <div class="form-btn-group">
        </div>
    </div>
</div>
@code {
    public CountriesData NewCountry { get; set; } = new CountriesData();

    private async Task AddNewCountryAsync()
    {
        if (await countriesDataServices.setCountryDataAsync(NewCountry))
            navigate.NavigateTo("Countries");
    }
}

