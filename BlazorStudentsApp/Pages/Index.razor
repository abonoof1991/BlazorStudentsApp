@page "/"
@inject StaticServices staticServices
<PageTitle>Home Page</PageTitle>
<h3>Home Page</h3>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                Statics
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card card-stats mb-4 mb-xl-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Total Student Registred</h5>
                                        <span class="h2 font-weight-bold mb-0">@totalStudent</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card card-stats mb-4 mb-xl-0">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <h5 class="card-title text-uppercase text-muted mb-0">Average age of students</h5>
                                        <span class="h2 font-weight-bold mb-0">@averageAge</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">
                                    Count of Students per class
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr style="text-align:center;">
                                                        <th>#</th>
                                                        <th>Class Name</th>
                                                        <th>Students No</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (studentPerClass.Any())
                                                    {
                                                        int sort = 1;
                                                        @foreach (var item in studentPerClass)
                                                        {
                                                            <tr style="text-align:center;">
                                                                <td>@sort</td>
                                                                <td>@item.ClassName</td>
                                                                <td>@item.Students</td>
                                                            </tr>
                                                            sort++;
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr style="text-align:center;">
                                                            <td colspan="3">
                                                                No Rows Found
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">
                                    Count of Students per Country
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr style="text-align:center;">
                                                        <th>#</th>
                                                        <th>Country Name</th>
                                                        <th>Students No</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (studentPerCountry.Any())
                                                    {
                                                        int sort = 1;
                                                        @foreach (var item in studentPerCountry)
                                                        {
                                                            <tr style="text-align:center;">
                                                                <td>@sort</td>
                                                                <td>@item.CountryName</td>
                                                                <td>@item.Students</td>
                                                            </tr>
                                                            sort++;
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr style="text-align:center;">
                                                            <td colspan="3">
                                                                No Rows Found
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public int totalStudent { get; set; }
    public int averageAge { get; set; }
    List<StudentPerClass> studentPerClass = new List<StudentPerClass>();
    List<StudentPerCountry> studentPerCountry = new List<StudentPerCountry>();
    protected override void OnInitialized()
    {
        totalStudent = staticServices.getTotalStudents();
        averageAge = staticServices.getAverageAge();
        studentPerClass = staticServices.getStudentPerClass();
        studentPerCountry = staticServices.getStudentPerCountry();
    }
    }
